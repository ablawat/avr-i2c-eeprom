.INCLUDE "24lc024h/config/24lc024h-config.inc"

;**********************************************************************************************;
; @section : Local Definition                                                                  ;
;**********************************************************************************************;

; @brief Control Code
.EQU IC_24LC024H_CONTROL_CODE = 0xA

; @brief Chip Select
.EQU IC_24LC024H_CHIP_SELECT = (CONFIG_24LC024H_CHIP_ADDRESS_A0 << 0) | \
                               (CONFIG_24LC024H_CHIP_ADDRESS_A1 << 1) | \
                               (CONFIG_24LC024H_CHIP_ADDRESS_A2 << 2)

; @brief Device Address
.EQU IC_24LC024H_DEVICE_ADDRESS = (IC_24LC024H_CONTROL_CODE << 4) | \
                                  (IC_24LC024H_CHIP_SELECT  << 1)
